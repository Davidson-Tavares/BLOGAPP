
{{#each postagens}}
<div class="card mt-4">
    <div class="card-body">
        <h2>{{titulo}}</h2>
        <p> {{descricao}}</p>
        <a href="/postagem/{{slug}} "><button class="btn btn-success">Leia mais</button></a>
        <hr>
        <small> Categoria : {{categoria.nome}} </small><br>
        <small> Data de publicação: {{#formatDate data}}{{/formatDate}} </small>
    </div>
</div>

{{else}}
<h5>Nenhuma postagem</h5>
{{/each}}

